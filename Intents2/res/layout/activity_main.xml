<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/fnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:text="Frage #" />

    <TextView
        android:id="@+id/fa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fnr"
        android:layout_centerVertical="true"
        android:text="Fragen / Antworten" />

    <TextView
        android:id="@+id/faI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fa"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fa"
        android:text="" />

    <TextView
        android:id="@+id/frage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fnr"
        android:layout_below="@+id/fnrI"
        android:layout_marginTop="55dp"
        android:text="Frage:" />

    <EditText
        android:id="@+id/frageI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frage"
        android:layout_below="@+id/frage"
        android:text="" />

    <TextView
        android:id="@+id/fnrI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fnr"
        android:layout_below="@+id/fnr"
        android:text="" />

    <Button
        android:id="@+id/fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/faI"
        android:layout_below="@+id/faI"
        android:layout_marginTop="72dp"
        android:text="Fire" />

</RelativeLayout>