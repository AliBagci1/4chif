<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity2" >

    <TextView
        android:id="@+id/fnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:text="Frage #" />

    <TextView
        android:id="@+id/ant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fnr"
        android:layout_centerVertical="true"
        android:text="Antwort" />

    <TextView
        android:id="@+id/frage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fnr"
        android:layout_below="@+id/fnrI"
        android:layout_marginTop="55dp"
        android:text="Frage:" />

    <TextView
        android:id="@+id/frageI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frage"
        android:layout_below="@+id/frage"
        android:text="123456789" />

    <TextView
        android:id="@+id/fnrI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fnr"
        android:layout_below="@+id/fnr"
        android:text="123456789" />

    <Button
        android:id="@+id/fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ant"
        android:layout_below="@+id/ant"
        android:layout_marginTop="74dp"
        android:text="Fire" />

    <EditText
        android:id="@+id/antI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ant"
        android:layout_below="@+id/ant"
        android:ems="10"
        android:text="" >

        <requestFocus />
    </EditText>

</RelativeLayout>